<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/ll_rv_item_todo_overview_container"
            android:orientation="vertical"
            android:layout_width="146dp"
            android:layout_height="146dp"
            android:background="@drawable/black_border"
            android:paddingHorizontal="22dp"
            android:paddingVertical="16dp"
            android:layout_margin="5dp">

        <TextView
                android:id="@+id/txt_rv_item_todo_overview_date"
                android:layout_width="35dp"
                android:layout_height="17dp"
                android:text="날짜"
                android:textSize="10sp"
                android:background="@drawable/yello_border"
                android:textColor="#fffdfd"
                android:lineSpacingExtra="2sp"
                android:gravity="center"
                android:layout_gravity="left"/>
        <TextView
                android:layout_centerInParent="true"
                android:id="@+id/txt_rv_item_todo_overview_mission"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="미션"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="28dp"/>

        <LinearLayout

                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/img_rv_item_todo_overvview_podo"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_marginTop="33.3dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginRight="5dp"/>
            <TextView
                    android:id="@+id/txt_rv_item_todo_overview_podo_num"
                    android:layout_width="15dp"
                    android:layout_height="12dp"
                    android:text="2알"
                    android:textSize="10sp"
                    android:textColor="#5d5d5d"
                    android:lineSpacingExtra="2sp"
                    android:layout_marginTop="35dp"/>

        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>
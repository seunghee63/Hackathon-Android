<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="#ffffff"
              android:dividerPadding="1dp">
    <RelativeLayout
            android:id="@+id/rl_nav_category_main_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
        <TextView
                android:text="Home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="14dp" android:textColor="#484848"
                android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_nav_category_main_todo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
        <TextView
                android:text="ToDo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="14dp" android:textColor="#484848"
                android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_nav_category_main_feed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
        <TextView
                android:text="Feed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="14dp" android:textColor="#484848"
                android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_nav_category_main_mypage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
        <TextView
                android:text="MyPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="14dp" android:textColor="#484848"
                android:textStyle="bold"/>
    </RelativeLayout>

</LinearLayout>
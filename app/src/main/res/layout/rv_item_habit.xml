<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="430dp"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/black_border">

    <RelativeLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_rv_title"
                android:layout_width="125dp"
                android:layout_height="37dp"
                android:background="@drawable/yello_border"
                android:gravity="center"
                android:text="나의 습관"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="3sp"
                />
        <TextView
                android:layout_below="@+id/tv_rv_title"
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_rv_item_habit"
                android:textColor="#5d5d5d"
                android:textSize="24sp"
                android:text="김치먹기"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"/>


        <LinearLayout
                android:weightSum="4"
                android:id="@+id/rl_rv_podo_img_line1"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/tv_rv_item_habit"
                android:orientation="horizontal"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/iv_rv_podo_cnt_0"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/podo_half"/>
            <ImageView
                    android:id="@+id/iv_rv_podo_cnt_1"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/podo_half"/>
            <ImageView
                    android:id="@+id/iv_rv_podo_cnt_2"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/podo_half"/>
            <ImageView
                    android:id="@+id/iv_rv_podo_cnt_3"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/empty_circle"/>

        </LinearLayout>
        <LinearLayout
                android:weightSum="3"
                android:layout_below="@+id/rl_rv_podo_img_line1"
                android:orientation="horizontal"
                android:layout_width="match_parent" android:layout_height="wrap_content"
        >
            <ImageView
                    android:id="@+id/iv_rv_podo_cnt_4"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/empty_circle"/>
            <ImageView
                    android:id="@+id/iv_rv_podo_cnt_5"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/empty_circle"/>
            <ImageView
                    android:id="@+id/iv_rv_podo_cnt_6"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/empty_circle"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>